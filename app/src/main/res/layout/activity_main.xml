<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="nameplaceholder.prevazanjaorg.MainActivity">

    <Button
        android:id="@+id/btnIscem"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_alignBaseline="@+id/btnPonujam"
        android:layout_alignBottom="@+id/btnPonujam"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="46dp"
        android:layout_marginStart="46dp"
        android:onClick="listPrevozovActivity"
        android:text="IŠČEM"
        android:textSize="15sp" />

    <Button
        android:id="@+id/btnPonujam"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="120dp"
        android:layout_marginEnd="34dp"
        android:layout_marginRight="34dp"
        android:onClick="listPrevozovActivity"
        android:text="PONUJAM"
        android:textSize="15sp" />

    <Button
        android:id="@+id/btnLogout"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/btnPonujam"
        android:layout_toStartOf="@+id/btnPonujam"
        android:onClick="listPrevozovActivity"
        android:text="LOGOUT"
        android:textSize="15sp" />

    <Button
        android:id="@+id/btnLanding"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:onClick="listPrevozovActivity"
        android:text="Landing"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/txtUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btnIscem"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/btnIscem"
        android:layout_marginTop="20dp"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/txtEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txtUsername"
        android:layout_alignStart="@+id/txtUsername"
        android:layout_below="@+id/txtUsername"
        android:textSize="24sp" />


</RelativeLayout>
